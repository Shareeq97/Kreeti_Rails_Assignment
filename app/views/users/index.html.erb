<%=link_to "Back" , home_index_path %>
<h1> Index page for users </h1>
<p>
	<%= form_tag(users_search_path, method: :get) do %>
		<label> Search:</label>
	 	<%= text_field_tag "search", nil, placeholder: "Search by name or email...",:size => "35%" %>
	 	<%= submit_tag "Search !" %>
	 <% end %>

</p>

<div>
	<% if @results.present? %>
		<h2> <%= pluralize(@results.count,"result") %> matched your search query </h2>
		<ul>
			<% @results.each do |user| %>
				<li>
				<strong> Name: </strong> <%= link_to  user.name,user_path(user) %>
				</li>
			<% end %>
		</ul>
	<% end %>
</div>

<br>
<%=button_to "Create New User", new_user_path, method: :get %> 
<h1><strong> Users </strong></h1>
<ol>
	<% @users.each do |user| %>
		<li>
			 <%= link_to  user.name,user_path(user) %>
		</li>
	<% end %>
</ol>
